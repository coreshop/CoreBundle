[
  {
    "name": "User Register",
    "type": "user",
    "active": true,
    "conditions": [
      {
        "type": "user.userType",
        "configuration": {
          "userType": "register"
        }
      }
    ],
    "actions": [
      {
        "type": "user.mail",
        "configuration": {
          "mails": {
            "de": "/de/shop/email/user-registered",
            "en": "/en/shop/email/user-registered"
          }
        }
      }
    ]
  },
  {
    "name": "User Reset Password",
    "type": "user",
    "active": true,
    "conditions": [
      {
        "type": "user.userType",
        "configuration": {
          "userType": "password-reset"
        }
      }
    ],
    "actions": [
      {
        "type": "user.mail",
        "configuration": {
          "mails": {
            "de": "/de/shop/email/user-reset-password",
            "en": "/en/shop/email/user-reset-password"
          }
        }
      }
    ]
  },
  {
    "name": "Order Shipped",
    "type": "order",
    "active": true,
    "conditions": [
      {
        "type": "order.shipmentState",
        "configuration": {
          "shipmentState": "shipped"
        }
      }
    ],
    "actions": [
      {
        "type": "shipment.orderMail",
        "configuration": {
          "mails": {
            "de": "/de/shop/email/order-shipped",
            "en": "/en/shop/email/order-shipped"
          }
        }
      }
    ]
  },
  {
    "name": "Order Confirmation",
    "type": "order",
    "active": true,
    "conditions": [
      {
        "type": "order.orderState",
        "configuration": {
          "orderState": "new"
        }
      },
      {
        "type": "order.paymentState",
        "configuration": {
          "paymentState": "paid"
        }
      }
    ],
    "actions": [
      {
        "type": "order.mail",
        "configuration": {
          "mails": {
            "de": "/de/shop/email/order-confirmation",
            "en": "/en/shop/email/order-confirmation"
          }
        }
      }
    ]
  }
]