<zend-config>
    <routes>
        <route>
            <name>coreshop_list</name>
            <pattern>/(\w+)\/shop\/(.*?)\~c([0-9]+)/</pattern>
            <reverse>/%lang/shop/%name~c%category</reverse>
            <module>CoreShop</module>
            <controller>product</controller>
            <action>list</action>
            <variables>lang,name,category</variables>
            <priority>2</priority>
        </route>
        <route>
            <name>coreshop_index</name>
            <pattern>/(\w+)\/shop(\/?)\$/</pattern>
            <reverse>/%lang/shop</reverse>
            <module>CoreShop</module>
            <controller>index</controller>
            <action>index</action>
            <variables>lang</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_detail</name>
            <pattern>/(\w+)\/shop\/(.*?)\~p([0-9]+)/</pattern>
            <reverse>/%lang/shop/%name~p%product</reverse>
            <module>CoreShop</module>
            <controller>product</controller>
            <action>detail</action>
            <variables>lang,name,product</variables>
            <priority>3</priority>
        </route>
        <route>
            <name>coreshop_cart</name>
            <pattern>/(\w+)\/shop\/cart\/([A-Za-z0-9._-]+)/</pattern>
            <reverse>/%lang/shop/cart/%act</reverse>
            <module>CoreShop</module>
            <controller>cart</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_checkout</name>
            <pattern>/(\w+)\/shop\/checkout\/([A-Za-z0-9._-]+)/</pattern>
            <reverse>/%lang/shop/checkout/%act</reverse>
            <module>CoreShop</module>
            <controller>checkout</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_user</name>
            <pattern>/(\w+)\/shop\/user\/([A-Za-z0-9._-]+)/</pattern>
            <reverse>/%lang/shop/user/%act</reverse>
            <module>CoreShop</module>
            <controller>user</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_search</name>
            <pattern>/(\w+)\/shop\/search/</pattern>
            <reverse>/%lang/shop/search</reverse>
            <module>CoreShop</module>
            <controller>search</controller>
            <action>search</action>
            <variables>lang</variables>
            <priority>5</priority>
        </route>
        <route>
            <name>coreshop_compare</name>
            <pattern>/(\w+)\/shop\/compare\/([A-Za-z0-9._-]+)/</pattern>
            <reverse>/%lang/shop/compare/%act</reverse>
            <module>CoreShop</module>
            <controller>compare</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_change_currency</name>
            <pattern>/(\w+)\/shop\/currency\/change~cu([0-9]+)/</pattern>
            <reverse>/%lang/shop/currency/change~cu%currency</reverse>
            <module>CoreShop</module>
            <controller>helper</controller>
            <action>change-currency</action>
            <variables>lang,currency</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_wishlist</name>
            <pattern>/(\w+)\/shop\/wishlist\/([A-Za-z0-9._-]+)/</pattern>
            <reverse>/%lang/shop/wishlist/%act</reverse>
            <module>CoreShop</module>
            <controller>wishlist</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_message</name>
            <pattern>/(\w+)\/shop\/message/</pattern>
            <reverse>/%lang/shop/message</reverse>
            <module>CoreShop</module>
            <controller>message</controller>
            <action>contact</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_payment</name>
            <pattern>/(\w+)\/shop\/payment\/([A-Za-z0-9._-]+)\/(\w+)/</pattern>
            <reverse>/%lang/shop/payment/%act/%mod</reverse>
            <module>%mod</module>
            <controller>payment</controller>
            <action>%act</action>
            <variables>lang,act,mod</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_change_display_prices_with_tax</name>
            <pattern>/(\w+)\/shop\/display-prices-with-tax/</pattern>
            <reverse>/%lang/shop/display-prices-with-tax</reverse>
            <module>CoreShop</module>
            <controller>helper</controller>
            <action>change-display-prices-with-tax</action>
            <variables>lang</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_cart_list</name>
            <pattern>/(\w+)\/shop\/cart-list\/([A-Za-z0-9._-]+)/</pattern>
            <reverse>/%lang/shop/cart-list/%act</reverse>
            <module>CoreShop</module>
            <controller>cart-list</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
    </routes>
</zend-config>